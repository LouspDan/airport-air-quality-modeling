# =====================================================
# Configuration Base de Données - Projet Airport
# =====================================================

# PostgreSQL Configuration (Port 5433 pour éviter conflit)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=airport_air_quality
DB_USER=airport_user
DB_PASSWORD=airport_password

# Docker Compose Variables
POSTGRES_DB=airport_air_quality
POSTGRES_USER=airport_user
POSTGRES_PASSWORD=airport_password

# pgAdmin Configuration (Port 8081 pour éviter conflit)
PGADMIN_DEFAULT_EMAIL=admin@airport.local
PGADMIN_DEFAULT_PASSWORD=admin

# =====================================================
# Configuration Application
# =====================================================

# Environnement
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Cache Redis (Port 6380 pour éviter conflit)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0
CACHE_TTL=3600

# =====================================================
# Configuration Métier
# =====================================================

# Calculs d'Émissions
DEFAULT_EMISSION_METHOD=ICAO
EMISSION_FACTORS_VERSION=2023.1
UPDATE_INTERVAL_MINUTES=15

# Qualité de l'Air
AIR_QUALITY_REFRESH_SECONDS=300
ALERT_THRESHOLD_NOX=200
ALERT_THRESHOLD_PM10=50

# Données Géospatiales
DEFAULT_SRID=4326
BUFFER_DISTANCE_M=1000

# =====================================================
# Configuration Externe (Optionnel)
# =====================================================

# APIs Externes (pour données météo, trafic, etc.)
# METEOFRANCE_API_KEY=your_api_key_here
# EUROCONTROL_API_KEY=your_api_key_here
# OPENSKY_API_USER=your_username
# OPENSKY_API_PASSWORD=your_password

# Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# ALERT_EMAIL_TO=admin@airport.local

# =====================================================
# Configuration Développement
# =====================================================

# Jupyter Notebooks
JUPYTER_TOKEN=airport_dev_token_2025
JUPYTER_PORT=8888

# Monitoring
# GRAFANA_PORT=3000
# PROMETHEUS_PORT=9090

# =====================================================
# Variables Système
# =====================================================

# Timezone
TZ=Europe/Paris

# Locale
LANG=fr_FR.UTF-8
LC_ALL=fr_FR.UTF-8

# Ressources Docker
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAX_CONNECTIONS=100